@{
    ViewBag.Title = "StudentList";
}

<div class="container">
    <h2 class="my-4 text-center">Student Details</h2>
    <div class="card">
        <div class="card-header">
            <h4>Student List</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Date of Birth</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)  // Loop through each student in the model
                    {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Username</td>
                            <td>@student.DateOfBirth</td>
                            <td>@student.Email</td>
                            <td>
                                <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-warning btn-sm">Edit</a>

                                <a href="@Url.Action("Delete", "Student", new {id=student.Id})" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to Form", "Index")
    </div>
</div>
